<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import model.CustomTableColumn?>
<?import org.fxmisc.richtext.StyleClassedTextArea?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBorderPane" fx:controller="scenes.paneScenes.DescPaneController" stylesheets="@../../styles/DescPane.css">
    <top>
        <BorderPane fx:id="titleBar">
            <top>
                <HBox prefHeight="0"/>
            </top>
            <left>
                <Label fx:id="windowTitle" text="Item data field display" prefHeight="25" translateX="20"/>
            </left>
            <right>
                <HBox prefWidth="0"/>
            </right>
            <bottom>
                <HBox prefHeight="0"/>
            </bottom>
        </BorderPane>
    </top>
    <left>
        <HBox prefWidth="10" />
    </left>
    <center>
        <BorderPane>
            <top>
                <Label text="Available data fields" prefHeight="30" translateX="20"/>
            </top>
            <center>
                <TableView fx:id="fieldTable" stylesheets="@../../styles/TableViewDescription.css" styleClass="fieldTable">
                    <columns>
                        <CustomTableColumn style="-fx-alignment:CENTER-LEFT; -fx-font-weight:bold;" editable="false" resizable="true" text="Field name" fx:id="field" percentageWidth="0.24"/>
                        <CustomTableColumn style="-fx-alignment:CENTER-LEFT;" editable="false" resizable="true" text="Examples" fx:id="example" percentageWidth="0.65"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="add" percentageWidth="0.06"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <left>
                <HBox prefWidth="0"/>
            </left>
            <right>
                <HBox prefWidth="10"/>
            </right>
            <bottom>
                <HBox prefHeight="0"/>
            </bottom>
        </BorderPane>
    </center>
    <right>
        <BorderPane>
            <top>
                <Label text="Concatenated elements" prefHeight="30" translateX="20"/>
            </top>
            <center>
                <TableView fx:id="elementTable" stylesheets="/styles/DescPane.css">
                    <columns>
                        <CustomTableColumn style="-fx-alignment:CENTER-LEFT; -fx-font-weight:lighter;" editable="false" resizable="true" fx:id="fieldName" percentageWidth="0.2"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Translate" fx:id="translate" percentageWidth="0.06"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Line&#10;Break" fx:id="linebreak" percentageWidth="0.06"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Bold" fx:id="bold" percentageWidth="0.06"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Italic" fx:id="italic" percentageWidth="0.06" />
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="leftATableColumn" percentageWidth="0.06"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="rightATableColumn" percentageWidth="0.06" />
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Prefix" fx:id="prefix" percentageWidth="0.14"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" text="Suffix" fx:id="suffix" percentageWidth="0.14"/>
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="up" percentageWidth="0.04" />
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="down" percentageWidth="0.04" />
                        <CustomTableColumn style="-fx-alignment:CENTER;" editable="false" resizable="true" fx:id="clear" percentageWidth="0.04" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </center>
            <left>
                <HBox prefWidth="10"/>
            </left>
            <right>
                <HBox prefWidth="10"/>
            </right>
            <bottom>
                <HBox prefHeight="0"/>
            </bottom>
        </BorderPane>
    </right>
    <bottom>
        <BorderPane>
            <top>
                <BorderPane prefHeight="50">
                    <top>
                        <HBox prefHeight="10"/>
                    </top>
                    <bottom>
                        <HBox prefHeight="10"/>
                    </bottom>
                    <left>
                        <HBox prefWidth="0"/>
                    </left>
                    <center>
                        <Label text="Description preview" prefHeight="30" translateX="20" BorderPane.alignment="CENTER_LEFT"/>
                    </center>
                    <right>
                        <BorderPane prefHeight="30">
                            <top>
                                <HBox prefHeight="0"/>
                            </top>
                            <bottom>
                                <HBox prefHeight="0"/>
                            </bottom>
                            <left>
                                <Button fx:id="incFontButton" stylesheets="/styles/DescPane.css" styleClass="increaseFont" prefWidth="30" prefHeight="30" translateX="-10">
                                </Button>
                            </left>
                            <center>
                                <HBox prefWidth="5"/>
                            </center>
                            <right>
                                <Button fx:id="decFontButton" stylesheets="/styles/DescPane.css" styleClass="decreaseFont" prefWidth="30" prefHeight="30"  translateX="-10">
                                </Button>
                            </right>
                        </BorderPane>
                    </right>
                </BorderPane>
            </top>
            <center>
                <BorderPane fx:id="previewPane">
                    <top>
                        <HBox prefHeight="0"/>
                    </top>
                    <left>
                        <HBox prefWidth="10"/>
                    </left>
                    <center>
                        <StyleClassedTextArea fx:id="previewArea" prefHeight="120"/>
                    </center>
                    <right>
                        <HBox prefWidth="10"/>
                    </right>
                    <bottom>
                        <HBox prefHeight="0"/>
                    </bottom>
                </BorderPane>
            </center>
            <left>
                <HBox prefWidth="10"/>
            </left>
            <right>
                <HBox prefWidth="10"/>
            </right>
            <bottom>
                <HBox spacing="10" alignment="CENTER_RIGHT" prefHeight="60">
                    <children>
                        <Button fx:id="applyButton" stylesheets="@../../styles/ButtonBlue.css" text="Apply"/>
                        <Button fx:id="cancelButton" stylesheets="@../../styles/ButtonBlue.css" text="Cancel"/>
                        <HBox prefWidth="0"/>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </bottom>
</BorderPane>
